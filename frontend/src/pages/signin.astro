---
import SigninForm from '@/components/Auth/Signin.vue'
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout title="signin">
    <main class="container">
        <div class="flex min-h-screen flex-col items-center justify-center gap-12">
            <a class="text-3xl font-bold" href="/">ONLINE SHOP</a>
            <div class="mx-auto grid w-full gap-6 sm:w-[350px]">
                <div class="grid gap-2 text-center">
                    <h1 class="text-2xl font-semibold">Login</h1>
                    <p class="text-balance text-muted-foreground">
                        Enter your username or email below to login to your account
                    </p>
                </div>
                <div class="grid gap-4">
                    <SigninForm client:load />
                </div>
                <div class="mt-4 text-center text-sm">
                    Don't have an account?
                    <a href="/signup" class="underline"> Sign up </a>
                </div>
            </div>
        </div>
    </main>
</BaseLayout>
