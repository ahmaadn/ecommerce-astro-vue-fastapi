---
import SignupForm from '@/components/Auth/Signup.vue'
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout title="signin">
    <main class="container">
        <div class="flex min-h-screen flex-col items-center justify-center gap-12">
            <a class="text-3xl font-bold" href="/">ONLINE SHOP</a>
            <div class="mx-auto grid w-full gap-6 sm:w-[350px]">
                <div class="grid gap-2 text-center">
                    <h1 class="text-2xl font-semibold">Resgister</h1>
                    <p class="text-balance text-muted-foreground">
                        Enter field to register to your account
                    </p>
                </div>
                <div class="grid gap-4">
                    <SignupForm urlSuccress="/signin" client:load />
                </div>
            </div>
        </div>
    </main>
</BaseLayout>
