---
import { auth } from '@/lib/auth'
import BaseLayout from './BaseLayout.astro'
import Header from '@/components/Header/MainHeader.astro'

interface Props {
    title: string
}

const isLogin = auth.isLogin(Astro)
if (!isLogin) {
    auth.logOut(Astro)
}
---

{
    isLogin ? (
        <BaseLayout class="bg-base-200" {...Astro.props}>
            <main>
                <Header>
                    <slot />
                </Header>
            </main>
        </BaseLayout>
    ) : (
        <div>404</div>
    )
}
