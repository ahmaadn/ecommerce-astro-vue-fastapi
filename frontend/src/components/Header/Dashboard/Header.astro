---
import { Icon } from 'astro-icon/components'
import BaseNavbar from '../BaseNavbar.astro'
---

<div class="drawer lg:drawer-open">
    <input id="dashbord-navbar-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col">
        <BaseNavbar class="shadow-md">
            <div class="flex-none lg:hidden">
                <label
                    for="dashbord-navbar-drawer"
                    aria-label="open sidebar"
                    class="btn btn-square btn-ghost"
                >
                    <Icon name="mdi:hamburger-menu" size={24} />
                </label>
            </div>
            <a class="mx-2 flex-1 px-2 text-xl font-semibold">Dashboard</a>
        </BaseNavbar>
        <slot />
    </div>
    <div class="drawer-side z-20">
        <label for="dashbord-navbar-drawer" aria-label="close sidebar" class="drawer-overlay"
        ></label>
        <slot name="sidebar" />
    </div>
</div>
